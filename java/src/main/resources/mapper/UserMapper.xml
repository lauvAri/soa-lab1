<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.UserMapper">

    <!-- 基础结果映射（不包含角色信息） -->
    <resultMap id="UserResultMap" type="com.example.demo.entity.User">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="roleId" column="role_id"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!-- 包含角色信息的结果映射 -->
    <resultMap id="UserWithRoleResultMap" type="com.example.demo.entity.User">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="roleId" column="role_id"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <!-- 关联角色对象 -->
        <association property="role" javaType="com.example.demo.entity.Role" 
                     notNullColumn="role_table_id">
            <id property="id" column="role_table_id"/>
            <result property="roleName" column="role_name"/>
            <result property="description" column="role_description"/>
            <result property="createdAt" column="role_created_at"/>
            <result property="updatedAt" column="role_updated_at"/>
        </association>
    </resultMap>

    <!-- 查询所有用户（不包含角色信息） -->
    <select id="findAll" resultMap="UserResultMap">
        SELECT id, name, role_id, created_at, updated_at
        FROM users
        ORDER BY id
    </select>

    <!-- 查询所有用户（包含角色信息） -->
    <select id="findAllWithRole" resultMap="UserWithRoleResultMap">
        SELECT 
            u.id,
            u.name,
            u.role_id,
            u.created_at,
            u.updated_at,
            r.id AS role_table_id,
            r.role_name,
            r.description AS role_description,
            r.created_at AS role_created_at,
            r.updated_at AS role_updated_at
        FROM users u
        LEFT JOIN roles r ON u.role_id = r.id
        ORDER BY u.id
    </select>

    <!-- 根据ID查询用户（不包含角色信息） -->
    <select id="findById" resultMap="UserResultMap">
        SELECT id, name, role_id, created_at, updated_at
        FROM users
        WHERE id = #{id}
    </select>

    <!-- 根据ID查询用户（包含角色信息） -->
    <select id="findByIdWithRole" resultMap="UserWithRoleResultMap">
        SELECT 
            u.id,
            u.name,
            u.role_id,
            u.created_at,
            u.updated_at,
            r.id AS role_table_id,
            r.role_name,
            r.description AS role_description,
            r.created_at AS role_created_at,
            r.updated_at AS role_updated_at
        FROM users u
        LEFT JOIN roles r ON u.role_id = r.id
        WHERE u.id = #{id}
    </select>

    <!-- 根据角色ID查询用户列表（包含角色信息） -->
    <select id="findByRoleId" resultMap="UserWithRoleResultMap">
        SELECT 
            u.id,
            u.name,
            u.role_id,
            u.created_at,
            u.updated_at,
            r.id AS role_table_id,
            r.role_name,
            r.description AS role_description,
            r.created_at AS role_created_at,
            r.updated_at AS role_updated_at
        FROM users u
        LEFT JOIN roles r ON u.role_id = r.id
        WHERE u.role_id = #{roleId}
        ORDER BY u.id
    </select>

    <!-- 插入用户 -->
    <insert id="insert" parameterType="com.example.demo.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (name, role_id, created_at, updated_at)
        VALUES (#{name}, #{roleId}, NOW(), NOW())
    </insert>

    <!-- 更新用户 -->
    <update id="update" parameterType="com.example.demo.entity.User">
        UPDATE users
        SET name = #{name},
            role_id = #{roleId},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <!-- 根据ID删除用户 -->
    <delete id="deleteById">
        DELETE FROM users
        WHERE id = #{id}
    </delete>

</mapper>

